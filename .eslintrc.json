{
    "extends": ["eslint:recommended", "plugin:react/recommended", "plugin:prettier"],
    "plugins": ["react", "prettier"],
    "rules": {
      "react/prefer-stateless-function": 1,
      "react/prop-types": "off",
      "react/no-danger": "off",
      "prettier/prettier": "warning"
    },
    "settings": {
    },
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "jsx": true
    },
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    }    
}